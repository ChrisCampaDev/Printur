---
interface Props {
  title: string;
  description: string;
  stepNumber: number;
  class?: string;
  'data-step'?: number;
}

const { title, description, stepNumber, class: className = '' } = Astro.props as Props;
---

<button 
  class={`flex flex-col items-start p-6 rounded-xl transition-all duration-300 text-left ${
    'bg-white text-gray-700 hover:bg-gray-50'
  } ${className}`}
  data-step={stepNumber}
>
  <span class={`inline-flex items-center justify-center w-10 h-10 rounded-full mb-4 ${
    'bg-blue-500 text-white'
  }`}>
    {stepNumber}
  </span>
  <h3 class="text-lg font-semibold mb-2">{title}</h3>
  <p class="text-sm">{description}</p>
</button>
