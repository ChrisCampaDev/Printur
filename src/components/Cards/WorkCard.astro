---
interface Props {
  title: string;
  description: string;
  stepNumber: number;
  class?: string;
  'data-step'?: number;
  id?: string;
}

const { 
  title, 
  description, 
  stepNumber, 
  class: className = '',
  id = `workcard-${Math.random().toString(36).substr(2, 9)}`
} = Astro.props as Props;
---

<article
  id={id}
  class={`flex flex-col items-start p-6 rounded-xl transition-all duration-300 text-left border-2 border-blue-100 shadow-lg ${
    'bg-white text-gray-700 hover:bg-blue-50 hover:text-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:outline-none'
  } ${className}`}
  data-step={stepNumber}
  tabindex="0"
  aria-labelledby={`${id}-title`}
  aria-describedby={`${id}-desc`}
  itemscope 
  itemtype="https://schema.org/CreativeWork"
>
  <div 
    class={`inline-flex items-center justify-center w-10 h-10 rounded-full mb-4 ${
      'bg-blue-600 text-white'
    }`}
    aria-hidden="true"
  >
    <span class="font-medium">{stepNumber}</span>
  </div>
  
  <h3 
    id={`${id}-title`}
    class="text-xl font-semibold mb-2"
    itemprop="name"
  >
    {title}
  </h3>
  
  <p 
    id={`${id}-desc`}
    class="text-lg text-gray-700"
    itemprop="description"
  >
    {description}
  </p>
  
  <span class="sr-only">Paso {stepNumber} de 4</span>
</article>
