<!-- Contact Form -->
  <div class="bg-white p-8 rounded-xl shadow-lg">
    <h2 id="contact-form-title" class="text-2xl font-bold text-gray-900 mb-6">Envíanos un mensaje</h2>
    <form 
      class="space-y-6" 
      aria-labelledby="contact-form-title"
      aria-describedby="form-instructions"
    >
      <p id="form-instructions" class="sr-only">
        Todos los campos son obligatorios. Complete el formulario y presione el botón "Enviar mensaje".
      </p>
      
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <label for="first_name" class="block text-sm font-medium text-gray-900 mb-1">
            Nombre <span class="text-red-600" aria-hidden="true">*</span>
            <span class="sr-only">(requerido)</span>
          </label>
          <input 
            type="text" 
            id="first_name" 
            name="first_name"
            required
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
            aria-required="true"
          >
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-900 mb-1">
            Correo electrónico <span class="text-red-600" aria-hidden="true">*</span>
            <span class="sr-only">(requerido)</span>
          </label>
          <input 
            type="email" 
            id="email" 
            name="email"
            required
            autocomplete="email"
            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
            aria-required="true"
          >
        </div>
      </div>
      
      <div>
        <label for="subject" class="block text-sm font-medium text-gray-900 mb-1">
          Asunto <span class="text-red-600" aria-hidden="true">*</span>
          <span class="sr-only">(requerido)</span>
        </label>
        <input 
          type="text" 
          id="subject" 
          name="subject"
          required
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
          aria-required="true"
        >
      </div>
      
      <div>
        <label for="message" class="block text-sm font-medium text-gray-900 mb-1">
          Mensaje <span class="text-red-600" aria-hidden="true">*</span>
          <span class="sr-only">(requerido)</span>
        </label>
        <textarea 
          id="message" 
          name="message"
          rows="4" 
          required
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-200"
          aria-required="true"
        ></textarea>
      </div>
      
      <div class="pt-2">
        <button 
          type="submit" 
          class="w-full flex justify-center py-3 px-6 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-600 transition-colors"
        >
          Enviar mensaje
        </button>
        <p class="mt-3 text-sm text-gray-600">
          <span class="text-red-600" aria-hidden="true">*</span> 
          <span>Campos obligatorios</span>
        </p>
      </div>
      
      <div role="alert" class="hidden" id="form-status">
        <!-- Mensaje de estado del formulario se mostrará aquí -->
      </div>
    </form>
  </div>